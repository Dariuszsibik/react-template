{
    "name": "webpack-react-typescript-template",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf ./dist",
        "start": "yarn webpack serve --progress --config webpack/webpack.config.dev.js",
        "watch": "yarn webpack serve --progress --config webpack/webpack.config.prod.js",
        "build": "webpack --progress --config webpack/webpack.config.prod.js",
        "analyze": "webpack --progress --config webpack/webpack.config.prod.js --env analyze",
        "lint": "eslint src --ext .js,.ts,.tsx --ignore-pattern '!.*.js'",
        "prettier": "prettier --check \"**/*.+(ts|tsx)\"",
        "prettier:fix": "prettier --write \"**/*.+(ts|tsx)\"",
        "format": "yarn lint --fix && yarn prettier:fix",
        "test": "jest",
        "test:watch": "jest --watchAll=true",
        "test:coverage": "rm -rf coverage && jest --coverage && open coverage/lcov-report/index.html",
        "postinstall": "[ -d '.husky' ] && husky install || true"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "6.22.3",
        "styled-components": "^6.1.8"
    },
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "@babel/preset-react": "^7.23.3",
        "@babel/preset-typescript": "^7.23.3",
        "@svgr/webpack": "^8.1.0",
        "@swc/core": "^1.4.7",
        "@swc/jest": "^0.2.36",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.27",
        "@types/react": "^18.2.65",
        "@types/react-dom": "^18.2.22",
        "@types/react-i18next": "^8.1.0",
        "@types/react-router-dom": "^5.3.3",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "babel-loader": "^9.1.3",
        "babel-plugin-styled-components": "^2.1.4",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^6.10.0",
        "dotenv-webpack": "^8.0.1",
        "esbuild-loader": "^4.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.8.1",
        "postcss": "^8.4.35",
        "postcss-loader": "^8.1.1",
        "postcss-preset-env": "^9.5.1",
        "prettier": "^3.2.5",
        "sass": "^1.55.0",
        "sass-loader": "^13.1.0",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.2",
        "webpack": "^5.90.3",
        "webpack-bundle-analyzer": "^4.10.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.3"
    },
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=6.0.0",
        "yarn": ">=1.0.0"
    }
}
